<!DOCTYPE html>
<html lang="es">
<head>
    <title>Register</title>
    <link rel="stylesheet" href="/css/sign&log.css">
    <link rel="stylesheet" href="/css/colores.css">
    <link rel="stylesheet" href="/css/partials.css">
    <%- include("../partials/head") %>
</head>


<body>

    <%- include("../partials/header") %>

    <main>

        <h2>Registrarse</h2>

        <form action="/users/create" method="post" enctype="multipart/form-data">

            <input type="text" name="firstName" placeholder="Primer Nombre" value="<%=locals.old && old.firstName ? old.firstName : ""%>">
            <% if (locals.errors && errors.firstName) { %>
                <p class="err-msg"><i class="fa-solid fa-circle fa-2xs"></i> <%=errors.firstName.msg%> </p>
            <% } else { %>
                <p><i class="fa-solid fa-circle fa-2xs"></i></p>
            <% } %>

            <input type="text" name="surname" placeholder="Apellido" value="<%=locals.old && old.surname ? old.surname : ""%>">
            <% if (locals.errors && errors.surname) { %>
                <p class="err-msg"><i class="fa-solid fa-circle fa-2xs"></i> <%=errors.surname.msg%> </p>
            <% } else { %>
                <p><i class="fa-solid fa-circle fa-2xs"></i></p>
            <% } %>

            <input type="text" name="username" placeholder="Nombre de Usuario" value="<%=locals.old && old.username ? old.userName : ""%>">
            <% if (locals.errors && errors.username) { %>
                <p class="err-msg"><i class="fa-solid fa-circle fa-2xs"></i> <%=errors.username.msg%> </p>
            <% } else { %>
                <p><i class="fa-solid fa-circle fa-2xs"></i></p>
            <% } %>

            <input type="email" name="email" placeholder="Correo ElectrÃ³nico" value="<%=locals.old && old.email ? old.email : ""%>">
            <% if (locals.errors && errors.email) { %>
                <p class="err-msg"><i class="fa-solid fa-circle fa-2xs"></i> <%=errors.email.msg%> </p>
            <% } else { %>
                <p><i class="fa-solid fa-circle fa-2xs"></i></p>
            <% } %>

            <input type="password" name="password" placeholder="clave">
            <% if (locals.errors && errors.password) { %>
                <p class="err-msg"><i class="fa-solid fa-circle fa-2xs"></i> <%=errors.password.msg%> </p>
            <% } else { %>
                <p><i class="fa-solid fa-circle fa-2xs"></i></p>
            <% } %>

            <select name="seller">

                <option value="Vendedor" <%= locals.old && old.seller == "Vendedor" ? "selected" : "" %> >Vendedor</option>
                <option value="Comprador" <%= locals.old && old.seller == "Comprador" ? "selected" : "" %> >Comprador</option>

            </select>

            <p><i class="fa-solid fa-circle fa-2xs"></i></p>

            <div>
                <p>introducir imagen <i class="fa-regular fa-image"></i></p>
                <input type="file" name="avatar">
            </div>
            <% if (locals.errors && errors.avatar) { %>
                <p class="err-msg"><i class="fa-solid fa-circle fa-2xs"></i> <%=errors.avatar.msg%> </p>
           <% } else { %>
            <p><i class="fa-solid fa-circle fa-2xs"></i></p>
            <% } %>

           <input type="hidden" name="oldImg" value="<%=locals.old && old.image ? old.image : "" %>">

           <div>
                <p>Restablecer</p>
                <button type="reset"></button>
            </div>
            
            <div>
                <p>Enviar</p>
                <button type="submit"></button>
            </div>

        </form>
        
    </main>

</body>
</html>